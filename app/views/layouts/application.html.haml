!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Alfred Workflow Package Manager"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags

    %link{:href => "/apple-touch-icon-57x57.png", :rel => "apple-touch-icon", :sizes => "57x57"}
    %link{:href => "/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}
    %link{:href => "/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
    %link{:href => "/apple-touch-icon-144x144.png", :rel => "apple-touch-icon", :sizes => "144x144"}
    %link{:href => "/apple-touch-icon-60x60.png", :rel => "apple-touch-icon", :sizes => "60x60"}
    %link{:href => "/apple-touch-icon-120x120.png", :rel => "apple-touch-icon", :sizes => "120x120"}
    %link{:href => "/apple-touch-icon-76x76.png", :rel => "apple-touch-icon", :sizes => "76x76"}
    %link{:href => "/apple-touch-icon-152x152.png", :rel => "apple-touch-icon", :sizes => "152x152"}
    %link{:href => "/apple-touch-icon-180x180.png", :rel => "apple-touch-icon", :sizes => "180x180"}
    %link{:href => "/favicon-192x192.png", :rel => "icon", :sizes => "192x192", :type => "image/png"}
    %link{:href => "/favicon-160x160.png", :rel => "icon", :sizes => "160x160", :type => "image/png"}
    %link{:href => "/favicon-96x96.png", :rel => "icon", :sizes => "96x96", :type => "image/png"}
    %link{:href => "/favicon-16x16.png", :rel => "icon", :sizes => "16x16", :type => "image/png"}
    %link{:href => "/favicon-32x32.png", :rel => "icon", :sizes => "32x32", :type => "image/png"}
    %meta{:content => "#9b59b6", :name => "msapplication-TileColor"}
    %meta{:content => "/mstile-144x144.png", :name => "msapplication-TileImage"}

  %body
    %header.text--centered
      .row
        .columns.small-12

          %nav
            - if current_user
              = link_to "New workflow", new_workflow_path
              |
              = link_to "Sign out", destroy_user_session_path, method: :delete
            - else
              = link_to "Login", new_user_session_path
              |
              = link_to "Register", new_user_registration_path


          = link_to root_path, id: "logo-outer" do
            %h1#logo Alfred Workflow Package Manager
          %h2 search download &amp; manage your workflows straight from Alfred.
          %br
          = link_to "Download the package manager workflow", "https://github.com/adambutler/alfred-workflow-package-manager-workflow/raw/master/Package%20Manager.alfredworkflow", class: "button"

    .row
      .columns.small-12
        = yield
        %br
        .row.text--centered.subtle
          .columns.small-12.medium-6.medium-offset-3
            %hr
            %p
              %small
                Alfred Workflow Package Manager is an
                = link_to "Open Source Project", "http://github.com/adambutler/alfred-workflow-package-manager"
                by
                = link_to "Adam Butler", "http://lab.io"
        %br
    = javascript_include_tag "application"

